<% if @session.new_record? %>
  <%= link_to 'Cancel', story_path(@story), class: 'header-action', data: { 'turbo-action': 'restore' }  %>
<% else %>
  <%= link_to 'Show', story_writing_session_path(@story,@session), class: 'header-action', data: {'turbo-action': 'replace'} %>
  <%= link_to 'Back', story_path(@story), class: 'header-action', data: {'turbo-action': 'restore'} %>
<% end %>