<div class="new-page">
  <div class="header">
    <h3 class="title">New Session</h3>
    <div class="header-actions">

      <%= link_to 'Cancel', sessions_path, class: 'header-action' %>
    </div>
  </div>

  <div class="container">
    <%= render 'text', text: @session.text, scrollToBottom: true, enableCopy: false %>

    <div class="compose-container">
      <%= render 'form', session: @session %>
    </div>

  </div>
</div>

