<% if @session.new_record? %>
  <%= link_to 'Cancel', sessions_path, class: 'header-action', data: { 'turbolinks-action': 'restore' }  %>
<% elsif @session.text == nil %>
  <%= link_to 'Cancel', @session, method: :delete, class: 'header-action', data: {'turbolinks-action': 'restore'} %>
<% else %>
  <%= link_to 'Show', @session, class: 'header-action', data: {'turbolinks-action': 'replace'} %>
  <%= link_to 'Back', sessions_path, class: 'header-action', data: {'turbolinks-action': 'restore'} %>
<% end %>