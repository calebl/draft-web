<%= form_with(model: session, remote: true) do |form| %>
  <% if session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
        <% session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" data-controller='compose'>
    <%#= form.label :text %>
    <%= form.text_area :text,
                       value: '',
                       autofocus: true,
                       id: 'composer',
                       resize: false,
                       data: {
                           target: 'compose.text',
                           action: 'keypress->compose#submit'
                       }

    %>
  </div>

