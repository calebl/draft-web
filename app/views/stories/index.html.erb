<div class="stories-page page">
    <div class="header">
        <h3 class="title">Stories</h3>
        <div class="header-actions">
            <%= link_to 'Back', writing_sessions_path, class: 'header-action', data: {'turbo-action': 'restore'} %>
        </div>
    </div>
    <div class="container">
        <dl class="stories-table">
            <% @stories.each do |session| %>
            <dd class="story">
                <div class="content">
                    <label><%= @story.title %></label>
                </div>
            </dd>
            <% end %>
        </dl>
    </div>
</div>