<% content_for :header do %>
  <h3>Edit Story Details</h3>
  <div class="header-actions">
    <%= link_to 'View Story', story_path(@story), class: 'header-action', data: {'turbo-action': 'restore'} %>
  </div>
<% end %>
<turbo-frame id="story_title">
  <%= form_with(model: @story, class: 'update-story-form') do |form| %>
    <% if @story.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>
        <ul>
          <% @story.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form.text_field :title, value: @story.title, placeholder: 'Enter title' %>
    <%= form.submit "Update" %>
    <a href="<%= story_path(@story) %>">cancel</a>
  <% end %>
</turbo-frame>
