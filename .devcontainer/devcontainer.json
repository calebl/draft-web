{
  "name": "Draft Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "forwardPorts": [8080],
  "postCreateCommand": "bin/setup --skip-server",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "rebornix.Ruby",
    "castwide.solargraph"
  ],
  "runArgs": ["--name", "draft-dev-container"]
}
